<!-- Validation failure messages -->
<% if @band.errors.any? %>
  <% @band.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Band #<%= @band.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_band/<%= @band.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @band.name %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @band.description %>">
      </div>

      <!-- Label and input for primary_genre -->
      <div class="form-group">
        <label for="primary_genre" class="control-label">
          Primary genre
        </label>

        <input type="text" id="primary_genre" name="primary_genre" placeholder="Primary genre" class="form-control" value="<%= @band.primary_genre %>">
      </div>

      <!-- Label and input for genre_id -->
      <div class="form-group">
        <label for="genre_id" class="control-label">
          Genre
        </label>

        <input type="text" id="genre_id" name="genre_id" placeholder="Genre" class="form-control" value="<%= @band.genre_id %>">
      </div>

      <button class="btn btn-warning">
        Update Band
      </button>
      or
      <a href="/bands/<%= @band.id %>">Cancel</a>
    </form>
  </div>
</div>
