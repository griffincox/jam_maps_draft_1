<div class="page-header">
  <h3>Message #<%= @message.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>To user</dt>
      <dd>
        <% if @message.to_user.present? %>
          <a href="/users/<%= @message.to_user_id %>">
            <%= @message.to_user.email %>
          </a>
        <% end %>
      </dd>

      <dt>From user</dt>
      <dd>
        <% if @message.from_user.present? %>
          <a href="/users/<%= @message.from_user_id %>">
            <%= @message.from_user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Body</dt>
      <dd><%= @message.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/messages" class="btn btn-primary">
        Back
      </a>
      <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
