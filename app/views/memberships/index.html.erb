<div class="page-header">
  <h1>
    Memberships
    <a href="/memberships/new" class="btn btn-lg btn-success">New Membership</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Band</th>
        <th>Actions</th>
      </tr>

      <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.user.email %></td>
        <td><%= membership.band.name %></td>
        <td>
          <a href="/memberships/<%= membership.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == membership.user %>
            <a href="/memberships/<%= membership.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_membership/<%= membership.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @memberships, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
