<!-- Validation failure messages -->
<% if @membership.errors.any? %>
  <% @membership.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Membership #<%= @membership.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_membership/<%= @membership.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @membership.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for band_id -->
      <div class="form-group">
        <label for="band_id" class="control-label">
          Band
        </label>

        <%= select_tag(:band_id, options_from_collection_for_select(Band.all, :id, :name, @membership.band_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Membership
      </button>
      or
      <a href="/memberships/<%= @membership.id %>">Cancel</a>
    </form>
  </div>
</div>
